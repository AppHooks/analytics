= content main
  .row
    .col-xs-12
      .panel.panel-default
        .panel-heading
          h3.panel-title Services
        .panel-body
          .row
            .col-xs-12.col-md-6.col-md-offset-3
              form
                .form-group
                  label for="key" Key
                  input.form-control id="key" type="text" disabled= value={{(.Get "user").Key}}

                .form-group
                  label for="Services" Services
                  table.table.table-striped
                    thead
                      tr
                        th.col-xs-8 Name
                        th.col-xs-4 Actions
                    tbody
                      {{range $index, $service := .Get "services"}}
                      tr
                        td
                          | {{$service.Name}}
                        td
                          .btn-group
                            a.btn.btn-danger href="" Remove
                      {{end}}

                a.btn.btn-default.pull-right href="/services/add.html" Add Service

